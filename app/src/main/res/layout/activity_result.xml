<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultLogoModeActivity">

    <Button
        android:id="@+id/btvResult"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Правильно: 100%"
        android:textSize="32dp"
        android:textAllCaps="false"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        android:background="@drawable/button_green"
        android:clickable="false"/>

    <Button
        android:id="@+id/btvErrorsCounter"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Ошибок: 0"
        android:textSize="30dp"
        android:textAllCaps="false"
        android:layout_marginTop="15dp"
        android:layout_below="@id/btvResult"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        android:background="@drawable/button_red"
        android:clickable="false"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/btvErrorsCounter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_football_small_orange"/>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textAllCaps="false"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_green"
        android:drawableStart="@drawable/ic_baseline_navigate_next_24"
        android:paddingStart="15dp"
        android:text="Далее"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</RelativeLayout>