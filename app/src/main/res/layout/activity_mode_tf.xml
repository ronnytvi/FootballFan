<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModeLogoActivity">

    <RelativeLayout
        android:id="@+id/upBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnHelp"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/button_red"
            android:textAllCaps="false"
            android:textSize="14dp"
            android:text="50 Footcoin"
            android:paddingStart="10dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:drawableStart="@drawable/ic_baseline_help_24"
            android:textColor="@color/colorWhite"/>

        <Button
            android:id="@+id/btvMoney"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/button_red"
            android:textSize="22dp"
            android:paddingEnd="10dp"
            android:layout_alignParentEnd="true"
            android:clickable="false"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:drawableEnd="@drawable/ic_baseline_monetization_on_24"
            android:textColor="@color/colorWhite"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="370dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:scrollbars="vertical"
        android:textSize="28dp"
        android:textColor="@color/colorDivider"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@drawable/button_red"
        android:layout_marginTop="70dp"/>

    <ProgressBar
        android:id="@+id/pbTimer"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="270dp"
        android:layout_height="20dp"
        android:layout_below="@id/tvQuestion"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="17sp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="17sp"
        android:progressDrawable="@drawable/pb_style_red"
        android:max="20"
        android:progress="20"></ProgressBar>

    <Button
        android:id="@+id/btnVar1"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_below="@id/pbTimer"
        android:background="@drawable/button_red"
        android:layout_marginTop="50dp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnVar2"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_below="@id/btnVar1"
        android:background="@drawable/button_red"
        android:layout_marginTop="15dp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />

</RelativeLayout>